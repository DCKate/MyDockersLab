# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: /data/db
  directoryPerDB: true
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# network interfaces
net:
  port: {{ item.value.port }}
  bindIp: {{ item.value.domain }}


#processManagement:

security:
    keyFile: "/opt/confile/mongo-keyfile"
    authorization: "enabled"

#operationProfiling:

replication:
    oplogSizeMB: 10240
    replSetName: "{{ item.value.replica_name }}"

sharding:
    clusterRole: "{{ item.value.clusterRole }}"

