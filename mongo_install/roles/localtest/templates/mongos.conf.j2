# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: {{ now_item.db_path }}
  directoryPerDB: true
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /home/vagrant/opt/confile/mongodb/mongod-{{ now_item.name }}.log

# network interfaces
net:
    port: {{ now_item.value.port }}
    bindIp: {{ now_item.value.domain }}
    maxIncomingConnections: 5000


#processManagement:

# security:
#     keyFile: "/opt/keyfile/mongo-keyfile"
#     authorization: "enabled"
#operationProfiling:

sharding:
    configDB: "rs_c1:27019,rs_c2:27019,rs_c3:27019"
    autoSplit: true

